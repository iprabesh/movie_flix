<%= form_for(@movie) do |f|%>
	<%= render "shared/errors" %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title, autofocus: true %> 
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description, cols: 40, rows: 7 %>
	</p>

	<p>
		<%= f.label :rating %>
		<%= f.select :rating, Movie::RATINGS, prompt: "Pick One" %>
	</p>

	<p>
		<%= f.label :released_on %>
		<%= f.date_select :released_on %>
	</p>

	<p>
		<%= f.label :total_gross %>
		<%= f.text_field :total_gross %>
	</p>

	<p>
  		<%= f.label :cast %><br/>
 		<%= f.text_field :cast %>
	</p>
	
	<p>
  		<%= f.label :director %><br/>
  		<%= f.text_field :director %>
	</p>

	<p>
  		<%= f.label :duration %><br/>
  		<%= f.text_field :duration, size: 10 %>
	</p>

	<p>
  		<%= f.label :image_file_name %><br/>
  		<%= f.text_field :image_file_name %>
	</p>

	<p> 
		<%= f.submit %> | 
		<%= link_to "Cancel", movies_path %>
	</p>

<% end %>