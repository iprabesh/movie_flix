
<strong><%=link_to('Add a movie', new_movie_path) %></strong>

<h1><%= pluralize(@movies.count, 'Movie') %></h1>

<% @movies.each do |movie| %>
  <article>
    <header>
      <%= image_for(movie) %>
      <h2><%= link_to(movie.title, movie_path(movie)) %></h2>
      <h3><%= movie.cast %></h3>
    </header>
    <p>
      <%= truncate(movie.description, length: 40, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on.to_s(:release_date)%></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%=format_total_gross(movie)%></td>
      </tr>
    </table>
  </article>
<% end %>